<% content_for :title, "Welcome to NFT Trials" %>
<div class="text-center">
  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-20 px-8 rounded-lg mb-12">
    <h1 class="text-5xl font-bold mb-6">Turn Your Images into NFTs</h1>
    <p class="text-xl mb-8 max-w-2xl mx-auto">
      Upload your images and automatically mint them as NFTs. Each picture you post becomes a unique digital asset on the blockchain.
    </p>
    <div class="space-x-4">
      <%= link_to "Get Started", signup_path, class: "bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors" %>
      <%= link_to "Learn More", "#features", class: "border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors" %>
    </div>
  </div>
  <!-- Features Section -->
  <div id="features" class="grid md:grid-cols-3 gap-8 mb-12">
    <div class="bg-white p-8 rounded-lg shadow-lg">
      <div class="text-4xl mb-4">🖼️</div>
      <h3 class="text-xl font-semibold mb-4">Upload Images</h3>
      <p class="text-gray-600">Simply upload your images and we'll handle the rest. Our platform supports all major image formats.</p>
    </div>
    <div class="bg-white p-8 rounded-lg shadow-lg">
      <div class="text-4xl mb-4">⚡</div>
      <h3 class="text-xl font-semibold mb-4">Auto-Minting</h3>
      <p class="text-gray-600">Every image you upload is automatically minted as an NFT with proper metadata and blockchain verification.</p>
    </div>
    <div class="bg-white p-8 rounded-lg shadow-lg">
      <div class="text-4xl mb-4">🔒</div>
      <h3 class="text-xl font-semibold mb-4">Secure & Authentic</h3>
      <p class="text-gray-600">Each NFT is securely stored on the blockchain with verifiable ownership and authenticity.</p>
    </div>
  </div>
  <!-- CTA Section -->
  <div class="bg-gray-100 py-12 px-8 rounded-lg">
    <h2 class="text-3xl font-bold mb-4">Ready to Start Creating NFTs?</h2>
    <p class="text-gray-600 mb-6">Join thousands of creators turning their art into digital assets</p>
    <%= link_to "Sign Up Now", signup_path, class: "bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors" %>
  </div>
</div>
